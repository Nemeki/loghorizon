{{#each data.attributes as |attribute key|}}
    <div class="attribute flexcol flex-group-center">
        <label
            for="data.attributes.{{key}}.value"
            class="resource-label"
        >{{key}}</label>
        <div class="resource-content flexrow flex-center flex-between">
            <input
                type="text"
                name="data.attributes.{{key}}.extra"
                value="{{attribute.extra}}"
                data-dtype="Number"
            />
            <span> / </span>
            <input
                class="read-input"
                type="text"
                name="data.attributes.{{key}}.value"
                value="{{attribute.value}}"
                data-dtype="Number"
                readonly
            />
        </div>
    </div>
{{/each}}