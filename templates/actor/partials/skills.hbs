<ol class="items-list">
    <li class="item flexrow item-header">
        <div class="item-image"></div>
        <div class="item-name">Name</div>
        <div class="item-controls">
            <a
                class="item-control item-create"
                title="Create item"
                data-type="skill"
            ><i class="fas fa-plus"></i> Add item</a>
        </div>
    </li>

    {{#each actor.skills as |skill id|}}
        <div class="image2-grid box item" data-item-id="{{skill._id}}">
            <div class="item-image">
                <img
                    src="{{skill.img}}"
                    title="{{skill.name}}"
                    width="50"
                    height="50"
                />
            </div>
            <div class="flexcol">
                <div class="flexrow">
                    <h4 class="item-name">{{skill.name}}</h4>
                    <div class="item-controls">
                        <a class="item-control item-edit" title="Edit Skill"><i
                                class="fas fa-edit"
                            ></i></a>
                        <a
                            class="item-control item-delete"
                            title="Delete Skill"
                        ><i class="fas fa-trash"></i></a>

                        <a class="item-roll"><i class="fas fa-dice"></i></a>
                    </div>
                </div>
                <span>{{skill.data.description}}</span>
            </div>
        </div>
    {{/each}}
</ol>